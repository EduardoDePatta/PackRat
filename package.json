{
  "name": "packrat",
  "version": "0.0.1",
  "description": "PackRat is the ultimate adventure planner designed for those who love to explore the great outdoors. Our app helps users plan and organize their trips with ease, whether it's a weekend camping trip, a day hike, or a cross-country road trip.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules server/node_modules client/node_modules packages/node_modules package-lock.json yarn.lock server/package-lock.json client/package-lock.json packages/package-lock.json server/yarn.lock client/yarn.lock packages/yarn.lock server/dist client/dist packages/dist",
    "build:prod": "${PACKAGE_MANAGER:-npm} run install:all && ${PACKAGE_MANAGER:-npm} run build:tsc && ${PACKAGE_MANAGER:-npm} run build:expo",
    "build:prod:docker": "docker build -t packrat-app -f Dockerfile.prod .",
    "build:prod:docker:bun": "docker build -t packrat-app-bun -f Dockerfile.prod.bun .",
    "build:expo": "${PACKAGE_MANAGER:-npm} run expo:export",
    "build:tsc": "${PACKAGE_MANAGER:-npm} run build:tsc:packages && ${PACKAGE_MANAGER:-npm} run build:tsc:server",
    "build:tsc:packages": "${PACKAGE_MANAGER:-npm} run build --prefix packages",
    "build:tsc:server": "${PACKAGE_MANAGER:-npm} run build --prefix server",
    "install:all": "${PACKAGE_MANAGER:-npm} run install:packages && ${PACKAGE_MANAGER:-npm} run install:client && ${PACKAGE_MANAGER:-npm} run install:server && ${PACKAGE_MANAGER:-npm} run install:root",
    "install:client": "cd client && ${PACKAGE_MANAGER:-npm} install",
    "install:server": "cd server && ${PACKAGE_MANAGER:-npm} install",
    "install:packages": "cd packages && ${PACKAGE_MANAGER:-npm} install",
    "install:root": "${PACKAGE_MANAGER:-npm} install",
    "setup": "${PACKAGE_MANAGER:-npm} run clean && ${PACKAGE_MANAGER:-npm} run install:all && ${PACKAGE_MANAGER:-npm} run setup:client && ${PACKAGE_MANAGER:-npm} run setup:server",
    "setup:client": "${PACKAGE_MANAGER:-npm} --prefix client run setup",
    "setup:server": "${PACKAGE_MANAGER:-npm} --prefix server run setup",
    "expo:export": "cd client && cp app.example.json app.json && npx expo export --platform web",
    "start": "${PACKAGE_MANAGER:-npm} run start:ts-node --prefix server",
    "start:prod": "${PACKAGE_MANAGER:-npm} run start:prod --prefix server",
    "dev:client": "${PACKAGE_MANAGER:-npm} start --prefix client",
    "dev:server": "${PACKAGE_MANAGER:-npm} start --prefix server",
    "test": "${PACKAGE_MANAGER:-npm} run test:all",
    "test:all": "${PACKAGE_MANAGER:-npm} run test:client && ${PACKAGE_MANAGER:-npm} run test:server",
    "test:client": "${PACKAGE_MANAGER:-npm} test --prefix client",
    "test:server": "${PACKAGE_MANAGER:-npm} test --prefix server",
    "lint": "${PACKAGE_MANAGER:-npm} run lint:all",
    "lint:all": "${PACKAGE_MANAGER:-npm} run lint:client && ${PACKAGE_MANAGER:-npm} run lint:server",
    "lint:client": "${PACKAGE_MANAGER:-npm} run lint --prefix client",
    "lint:server": "${PACKAGE_MANAGER:-npm} run lint --prefix server",
    "format": "${PACKAGE_MANAGER:-npm} run format:all",
    "format:all": "prettier --write \"**/*.{js,jsx,ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-bierman/PackRat.git"
  },
  "keywords": [
    "outdoors",
    "hiking",
    "camping",
    "road trip",
    "travel",
    "adventure",
    "planner",
    "packing",
    "packing list",
    "packing checklist",
    "packing planner",
    "packing organizer",
    "packing app",
    "packing checklist app",
    "packing list app",
    "packing planner app"
  ],
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "cd client && eslint --fix",
      "prettier --write"
    ],
    "server/**/*.{js,ts}": [
      "cd server && eslint --fix",
      "prettier --write"
    ]
  },
  "author": "Andrew Bierman",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/andrew-bierman/PackRat/issues"
  },
  "homepage": "https://github.com/andrew-bierman/PackRat#readme",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "typescript": "^5.2.2"
  }
}
